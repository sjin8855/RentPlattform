<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_display_bar"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/all_display_name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/all_display_bar"
        app:layout_constraintBottom_toBottomOf="@+id/all_display_bar"
        app:layout_constraintTop_toTopOf="@+id/all_display_bar"
        app:layout_constraintLeft_toRightOf="@id/all_display_bar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/all_display_fee"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="120dp"
        app:layout_constraintLeft_toLeftOf="@+id/all_display_bar"
        app:layout_constraintBottom_toBottomOf="@+id/all_display_bar"
        app:layout_constraintTop_toTopOf="@+id/all_display_bar"
        app:layout_constraintLeft_toRightOf="@id/all_display_bar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/all_display_type"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toLeftOf="@+id/all_display_bar"
        app:layout_constraintBottom_toBottomOf="@+id/all_display_bar"
        app:layout_constraintTop_toTopOf="@+id/all_display_bar"
        app:layout_constraintLeft_toRightOf="@id/all_display_name"
        android:layout_marginLeft="200dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/all_display_availability"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toLeftOf="@+id/all_display_bar"
        app:layout_constraintBottom_toBottomOf="@+id/all_display_bar"
        app:layout_constraintTop_toTopOf="@+id/all_display_bar"
        app:layout_constraintLeft_toRightOf="@id/all_display_type"
        android:layout_marginLeft="280dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/all_display_key"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toLeftOf="@+id/all_display_bar"
        app:layout_constraintBottom_toBottomOf="@+id/all_display_bar"
        app:layout_constraintTop_toTopOf="@+id/all_display_bar"
        app:layout_constraintLeft_toRightOf="@id/all_display_type"
        android:layout_marginLeft="400dp"
        android:textSize="15dp"/>

</android.support.constraint.ConstraintLayout>