<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/display_bar"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/check_display_title"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/display_bar"
        app:layout_constraintBottom_toBottomOf="@+id/display_bar"
        app:layout_constraintTop_toTopOf="@+id/display_bar"
        app:layout_constraintLeft_toRightOf="@id/display_bar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/check_display_confirm"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toLeftOf="@+id/display_bar"
        app:layout_constraintBottom_toBottomOf="@+id/display_bar"
        app:layout_constraintTop_toTopOf="@+id/display_bar"
        app:layout_constraintLeft_toRightOf="@id/display_name"
        android:layout_marginLeft="150dp"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/check_display_date"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:layout_constraintLeft_toLeftOf="@+id/display_bar"
        app:layout_constraintBottom_toBottomOf="@+id/display_bar"
        app:layout_constraintTop_toTopOf="@+id/display_bar"
        app:layout_constraintLeft_toRightOf="@id/display_type"
        android:layout_marginLeft="250dp"
        android:textSize="15dp"/>

</android.support.constraint.ConstraintLayout>