<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/simplebackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_enrall"
        android:background="#3F51B5"
        />


    <ImageView
        android:id="@+id/what"
        android:layout_width="200dp"
        android:layout_height="56dp"
        android:tint="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@+id/view"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"

        android:src="@drawable/ic_icon_whatbackground"/>

    <ImageView
        android:id="@+id/textcheckreport"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:tint="#FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        android:background="@null"
        android:src="@drawable/ic_icon_textenroll"/>



    <TextView
        android:id="@+id/title_enrall"
        android:layout_width="0dp"
        android:layout_height="440dp"
        android:gravity="center|center_vertical"
        android:paddingLeft="30dp"
        android:text="등록신청"
        android:background="@drawable/xml_border"
        android:singleLine="true"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        />

    <EditText
        android:id="@+id/content_enrall"
        android:hint="ETC.... Note"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"

        android:background="@drawable/xml_border"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/title_enrall"
        android:layout_marginLeft="30dp"
        app:layout_constraintRight_toRightOf="@+id/title_enrall"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@+id/title_enrall"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_enrall"
        />

    <EditText
        android:id="@+id/item_name"
        android:hint="Item name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"

        android:background="@drawable/xml_border"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@+id/title_enrall"
        android:layout_marginLeft="30dp"
        app:layout_constraintRight_toRightOf="@+id/title_enrall"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="@+id/title_enrall"
        android:layout_marginBottom="380dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_enrall"
        />

    <Button
        android:id="@+id/send_enrall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/content_enrall"/>
</android.support.constraint.ConstraintLayout>




